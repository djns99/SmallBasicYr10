Sub Button_Clicked
  'Checks Button Presses
  If Controls.LastClickedButton = Main_Menu_Button Then
    Controls.Remove(Main_Menu_Button)
    Main_Menu_Window()
  ElseIf  Controls.LastClickedButton = Quit_Game_Button Then
    Program.End()
  ElseIf  Controls.LastClickedButton = Continue_Button Then
    Hide_Menu_Window()
  ElseIf  Controls.LastClickedButton = Restart_Button Then
    Restart()
  ElseIf  Controls.LastClickedButton = Settings_Button Then
    Hide_Menu_Window()
    Settings()
  ElseIf Controls.LastClickedButton = Settings_Exit Then
    Hide_Settings_Window()
    Main_Menu_Window()
  ElseIf Controls.LastClickedButton = Play_Game_Button Then
    TW_Title = "Level " + Level_No
    Text_Window()
  ElseIf Controls.LastClickedButton = Help_Button Then
    Hide_Menu_Window()
    Show_Help_Window()
  ElseIf Controls.LastClickedButton = Help_Exit Then
    Hide_Help_Window()
    Main_Menu_Window()
  EndIf
EndSub
'///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
Sub Key_Pressed
  'Checks Key Press
  If GraphicsWindow.LastKey = "S" Then
    Toggle_Sound()
  ElseIf GraphicsWindow.LastKey = "Escape" Then
    If Menu = "True" Then
      Hide_Menu_Window()
    ElseIf S_Menu = "True" Then
      Hide_Settings_Window()
      Main_Menu_Window()
    ElseIf H_Menu = "True" Then
      Hide_Help_Window()
      Main_Menu_Window()
    Else
      Program.End()
    EndIf
  ElseIf GraphicsWindow.LastKey = "M" Then
    If Multichoice_On = "True" Then
      Multichoice_On = "False"
    Else
      Multichoice_On = "True"
    EndIf
  ElseIf GraphicsWindow.LastKey = "F12" Then
    Level_No = Level_No + 1
    Animate()
  EndIf
EndSub
