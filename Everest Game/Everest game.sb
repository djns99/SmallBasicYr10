Sub Animate
  'Animates character between levels
  'Checks that the level has changed
  If Temp_Level <> Level_No Then
    If Sound_On = "True" And Level_No > 1 Then
      Sound.PlayChime()
    EndIf
    Temp_Level = Level_No
    'Checks the level and moves to the corresponding location
    If Level_No = 1 Then
        Shapes.Move(Player, 285, 470)      
    ElseIf Level_No = 2 Then
      For i = 1 To 70 Step 0.1
        If Level_No = 2 Then
         Shapes.Move(Player, 285 + i, 470 - i * 1.2)
         Program.Delay(1)
       EndIf
     EndFor
     For i = 1 To 110 Step 0.2
       If Level_No = 2 Then
         Shapes.Move(Player, 355 - i * 0.2, 386 - i)
         Program.Delay(1)
       EndIf
     EndFor
       Shapes.Animate(Player, 420, 130, 1000)
     ElseIf Level_No = 3 Then
       If Shapes.GetLeft(Player) = 420 Then
         Shapes.Animate(Player, 210, 35, 800)
       Else
         Shapes.Move(Player, 420, 130)
         Shapes.Animate(Player, 210, 35, 800)
       EndIf
    ElseIf Level_No = 4 Then
      If Shapes.GetLeft(Player) = 210 Then
        Shapes.Animate(Player, 135, -150, 800)
      Else
        Shapes.Move(Player, 210, 35)
        Shapes.Animate(Player, 135, -150, 800)
      EndIf
    ElseIf Level_No = 5 Then
      If Shapes.GetLeft(Player) = 135 Then
        Shapes.Animate(Player, -45, -195, 500)
      Else
        Shapes.Move(Player, 135, -150)
        Shapes.Animate(Player, -45, -195, 500)
      EndIf
    ElseIf Level_No = 6 Then
      If Shapes.GetLeft(Player) = -45 Then
        Shapes.Animate(Player, -175, -320, 800)
      Else
        Shapes.Move(Player, -45, -195)
        Shapes.Animate(Player, -175, -320, 800)
      EndIf
      You_Win()
    EndIf    
  EndIf
EndSub
