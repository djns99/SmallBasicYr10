Player_Score = 10
Computer_Score = 5
Difficulty_Bonus = 10
Written = "False"

High_Score_File = "P:\High Scores.docx"
File.WriteLine(High_Score_File, 5, "2. Computer .... 10")
File.WriteLine(High_Score_File, 4, "2. Computer .... 100")
File.WriteLine(High_Score_File, 3, "2. Computer .... 250")
File.WriteLine(High_Score_File, 2, "2. Computer .... 750")
File.WriteLine(High_Score_File, 1, "1. Computer .... 1000")
File.WriteLine(High_Score_File, 6, 10)
File.WriteLine(High_Score_File, 7, 25)
File.WriteLine(High_Score_File, 8, 40)
File.WriteLine(High_Score_File, 9, 55)
File.WriteLine(High_Score_File, 10, 100)

Score = (Player_Score - Computer_Score) * Difficulty_Bonus



While Written = "False"
  line = line + 1
  If Score > File.ReadLine(High_Score_File, line) And line < 11 Then
    File.WriteLine(High_Score_File, 1, Score)
    Written = "True"
  ElseIf line > 10 Then
    Written = "True"
  EndIf
  TextWindow.WriteLine(line)
  Program.Delay(100)
EndWhile

TextWindow.WriteLine("You placed " + line + " on the leaderboard")